{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C :: gcc.exe fordito",
			"command": "C:\\Pico-Tools\\mingw64\\bin\\gcc.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"detail": "compiler: gcc.exe"
		},
